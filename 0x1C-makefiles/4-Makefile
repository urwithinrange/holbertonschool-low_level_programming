CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:c=o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
%.o: %.c
	$(CC) -c $(CFLAGS) -o $@ $<
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ holberton
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) *~ holberton
	$(RM) $(OBJ)
re: oclean all

